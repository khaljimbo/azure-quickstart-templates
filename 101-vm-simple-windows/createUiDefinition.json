{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "vmName",
                "type": "Microsoft.Common.TextBox",
                "label": "Virtual Machine name",
                "toolTip": "The name of the Virtual Machine.",
                "defaultValue": "simple-vm",
                "constraints": {
                    "required": true,
                    "regex": "^[a-z0-9A-Z-]{3,15}$",
                    "validationMessage": "The VM Name must be between 3 and 15 characters long and contain letters, numbers and hyphens only."
                }
            },
            {
                "name": "adminUsername",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "Username",
                "toolTip": "Admin username for the machine",
                "osPlatform": "Windows",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "password",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                    "password": "Password",
                    "confirmPassword": "Confirm password"
                },
                "toolTip": "Admin password for the virtual machine",
                "constraints": {
                    "required": true,
                    "regex": "^(?=.*[A-Z])(?=.*[.!@#$%^&*()-_=+])(?=.*[0-9])(?=.*[a-z]).{12,40}$",
                    "validationMessage": "Password must be at least 12 characters long, and contain upper case, lower case, number and symbol"
                },
                "options": {
                    "hideConfirmation": false
                },
                "visible": true
            }
        ],
        "steps": [
            {
                "name": "VirtualMachineConfig",
                "label": "Virtual Machine Settings",
                "subLabel": {
                    "preValidation": "Configure the virtual machine's resources and settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Virtual Machine Settings",
                "elements": [
                    {
                        "name": "OSVersion",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Windows OS Version",
                        "defaultValue": "2019-Datacenter",
                        "toolTip": "The OS Version for the VM Image",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "value": "2008-R2-SP1",
                                    "label": "2008-R2-SP1"
                                },
                                {
                                    "value": "2012-Datacenter",
                                    "label": "2012-Datacenter"
                                },
                                {
                                    "value": "2012-R2-Datacenter",
                                    "label": "2012-R2-Datacenter"
                                },
                                {
                                    "value": "2016-Nano-Server",
                                    "label": "2016-Nano-Server"
                                },
                                {
                                    "value": "2016-Datacenter-with-Containers",
                                    "label": "2016-Datacenter-with-Containers"
                                },
                                {
                                    "value": "2016-Datacenter",
                                    "label": "2016-Datacenter"
                                },
                                {
                                    "value": "2019-Datacenter",
                                    "label": "2019-Datacenter"
                                },
                                {
                                    "value": "2019-Datacenter-Core",
                                    "label": "2019-Datacenter-Core"
                                },
                                {
                                    "value": "2019-Datacenter-Core-smalldisk",
                                    "label": "2019-Datacenter-Core-smalldisk"
                                },
                                {
                                    "value": "2019-Datacenter-Core-with-Containers",
                                    "label": "2019-Datacenter-Core-with-Containers"
                                },
                                {
                                    "value": "2019-Datacenter-Core-with-Containers-smalldisk",
                                    "label": "2019-Datacenter-Core-with-Containers-smalldisk"
                                },
                                {
                                    "value": "2019-Datacenter-smalldisk",
                                    "label": "2019-Datacenter-smalldisk"
                                },
                                {
                                    "value": "2019-Datacenter-with-Containers",
                                    "label": "2019-Datacenter-with-Containers"
                                },
                                {
                                    "value": "2019-Datacenter-with-Containers-smalldisk",
                                    "label": "2019-Datacenter-with-Containers-smalldisk"
                                }
                            ],
                            "required": true
                        },
                        "visible": true
                    },
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Virtual machine size",
                        "toolTip": "The size of virtual machine to provision.",
                        "recommendedSizes": [
                            "Standard_D2_v2",
                            "Standard_A2_v2"
                        ],
                        "osPlatform": "Windows",
                        "count": "1"
                    },
                    {
                        "name": "logAnalyticsSelector",
                        "type": "Microsoft.Solutions.ResourceSelector",
                        "label": "Select Log Analytics Accounts",
                        "resourceType": "microsoft.operationalinsights/workspaces",
                        "options": {
                            "filter": {
                                "subscription": "onBasics",
                                "location": "onBasics"
                            }
                        }
                    },
                    {
                        "name": "domainJoin",
                        "type": "Microsoft.Common.OptionsGroup",
                        "label": "Join VM to Domain",
                        "defaultValue": "Yes",
                        "toolTip": "",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Yes",
                                    "value": "one"
                                },
                                {
                                    "label": "No",
                                    "value": "two"
                                }
                            ],
                            "required": true
                        },
                        "visible": true
                    },
                    {
                        "name": "domainName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Domain Name",
                        "defaultValue": "",
                        "toolTip": "The name of domain you wish to join to",
                        "placeholder": "",
                        "multiLine": false,
                        "constraints": {
                            "required": false,
                            "validations": [
                                {
                                    "regex": "^[a-z0-9A-Z]{1,30}$",
                                    "message": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                                },
                                {
                                    "isValid": "[startsWith(steps('resourceConfig').nameInstance, 'contoso')]",
                                    "message": "Must start with 'contoso'."
                                }
                            ]
                        },
                        "visible": "[coalesce(steps('VirtualMachineConfig').domainJoin, 'Yes')]"
                    },
                    {
                        "name": "domainUser",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Domain Account",
                        "defaultValue": "",
                        "toolTip": "The account to use to join to the domain",
                        "placeholder": "",
                        "multiLine": false,
                        "constraints": {
                            "required": false,
                            "validations": [
                                {
                                    "regex": "^[a-z0-9A-Z]{1,30}$",
                                    "message": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                                },
                                {
                                    "isValid": "[startsWith(steps('resourceConfig').nameInstance, 'contoso')]",
                                    "message": "Must start with 'contoso'."
                                }
                            ]
                        },
                        "visible": "[coalesce(steps('VirtualMachineConfig').domainJoin, 'Yes')]"
                    },
                    {
                        "name": "domainPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Domain Password",
                            "confirmPassword": "Confirm Password"
                        },
                        "toolTip": "",
                        "constraints": {
                            "required": false,
                            "regex": "^[a-zA-Z0-9]{8,}$",
                            "validationMessage": "Password must be at least 8 characters long, contain only numbers and letters"
                        },
                        "options": {
                            "hideConfirmation": true
                        },
                        "visible": "[coalesce(steps('VirtualMachineConfig').domainJoin, 'Yes')]"
                    }
                ]
            },
            {
                "name": "networking",
                "label": "Networking",
                "elements": [
                    {
                        "name": "networkingInfo",
                        "type": "Microsoft.Common.TextBlock",
                        "visible": true,
                        "options": {
                            "text": "Select the Virtual Network and Subnet that you wish to use.",
                            "link": {
                                "label": "",
                                "uri": ""
                            }
                        }
                    },
                    {
                        "name": "vnet",
                        "type": "Microsoft.Network.VirtualNetworkCombo",
                        "label": {
                            "virtualNetwork": "Virtual network",
                            "subnets": "Subnets"
                        },
                        "toolTip": {
                            "virtualNetwork": "",
                            "subnets": ""
                        },
                        "defaultValue": {
                            "name": "vnet01",
                            "addressPrefixSize": "/16"
                        },
                        "constraints": {
                            "minAddressPrefixSize": "/16"
                        },
                        "options": {
                            "hideExisting": false
                        },
                        "subnets": {
                            "subnet1": {
                                "label": "Subnet",
                                "defaultValue": {
                                    "name": "",
                                    "addressPrefixSize": "/24"
                                },
                                "constraints": {
                                    "minAddressPrefixSize": "/24",
                                    "minAddressCount": 12,
                                    "requireContiguousAddresses": true
                                }
                            }
                        },
                        "visible": true
                    }
                ]
            },
            {
                "name": "tags",
                "label": "Tags",
                "elements": [
                    {
                        "name": "tagsByResource",
                        "type": "Microsoft.Common.TagsByResource",
                        "resources": [
                            "Microsoft.Compute/virtualMachines"
                        ]
                    }
                ]
            }
        ],
        "outputs": {
            "location": "[location()]",
            "vmName": "[basics('vmName')]",
            "adminUsername": "[basics('adminUsername')]",
            "adminPassword": "[basics('password')]",
            "vmSize": "[steps('VirtualMachineConfig').vmSize]",
            "OSVersion": "[steps('VirtualMachineConfig').OSVersion]"
        }
    }
}